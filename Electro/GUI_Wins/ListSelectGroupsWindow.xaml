<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="BargElectro.Windows.ListSelectGroupsWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Добавление элемента к группе"
	WindowStartupLocation="CenterScreen"
	Loaded="Window_Loaded"
	Width="300"
	MinHeight="250"
	SizeToContent="Height">
	<Window.Resources>
		<Style
			TargetType="Button">
			<Setter
				Property="Width"
				Value="100" />
			<Setter
				Property="Height"
				Value="23" />
			<Setter
				Property="Margin"
				Value="10,10" />
		</Style>
	</Window.Resources>
	<Grid
		DockPanel.Dock="Top">
		<Grid.RowDefinitions>
			<RowDefinition
				MinHeight="200" />
			<RowDefinition
				Height="50" />
		</Grid.RowDefinitions>
		<StackPanel
			Orientation="Horizontal"
			HorizontalAlignment="Center"
			Grid.Row="1">
			<Button
				x:Name="btnChoose"
				Content="Выбрать" Click="BtnChoose_Click" />
			<Button
				x:Name="btnCancel"
				Content="Отмена" IsCancel="True" />
		</StackPanel>
		<ListBox
			x:Name="lstGroups" />
	</Grid>
</Window>